	vec4 col = textureLod(TEXTURE, UV, 32.0);
	
	vec3 bloom = GetBloom(TEXTURE, UV, TEXTURE_PIXEL_SIZE);
	
	col.rgb += bloom * bloomIntensity;
	
	COLOR = col;
}"

