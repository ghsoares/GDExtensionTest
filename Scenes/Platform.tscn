[sub_resource type="Shader" id=4]
code = "shader_type canvas_item;

uniform float minPerfectDistance = 4.0;
uniform sampler2D scoreGradient;

varying vec2 v;

void vertex() {
	v = VERTEX;
}

void fragment() {
	vec2 size = v / UV;
	float dist = abs(v.x - size.x / 2.0);
	float score = (dist - minPerfectDistance) / (size.x / 2.0 - minPerfectDistance);
	score = 1.0 - clamp(score, 0, 1);
	vec4 col = texture(scoreGradient, vec2(score, 0.0));
	COLOR = col;
}



"

