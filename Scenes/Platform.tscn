[sub_resource type="Shader" id=1]
code = "shader_type canvas_item;

uniform sampler2D ditheringTex;
uniform float pulseFrequency = 1.0;
uniform float pulseMagnitude = .1;
uniform vec2 localPlayerPosition;
uniform float playerFadeLength = 16.0;

varying vec2 v;

void vertex() {
	v = VERTEX;
}

void fragment() {
	float t = UV.y;
	vec2 ditherSize = vec2(textureSize(ditheringTex, 0));
	float d = texture(ditheringTex, v / ditherSize).r;
	
	t += d;
	t -= (1.0 - UV.y) * (sin(TIME * pulseFrequency * 3.1415) * .5 + .5) * pulseMagnitude;
	
	vec2 playerOff = (localPlayerPosition - v);
	playerOff.y = min(playerOff.y, 0.0);
	float playerDistance = length(playerOff);
	
	t *= clamp(playerDistance / playerFadeLength, 0.0, 1.0);
	
	COLOR.a *= step(1.0, t);
}






"

