code = "shader_type canvas_item;

uniform sampler2D ditherMatrix;
uniform float ditherThreshold = .5;
uniform float pulseFrequency = 2.0;
uniform float pulseMagnitude = .1;
uniform vec2 playerPosition;
uniform float playerFadeRange = 16.0;

varying vec2 v;

void vertex() {
	v = VERTEX;
}

void fragment() {
	vec2 size = v / UV;
	vec2 pos = floor(v);
	vec2 ditherSize = vec2(textureSize(ditherMatrix, 0));
	vec2 ditherUv = v / ditherSize;
	
	float transition = pos.y / size.y;
	float dither = textureLod(ditherMatrix, ditherUv, 0.0).r;
	
	dither += transition + sin(radians(360.0) * TIME * pulseFrequency) * pulseMagnitude;
	
	float dist = distance(pos, floor(playerPosition)) / playerFadeRange;
	dist = clamp(dist, 0.0, 1.0);
	dither *= dist;
	
	dither = step(ditherThreshold, dither);
	
	COLOR.a *= dither;
}"

